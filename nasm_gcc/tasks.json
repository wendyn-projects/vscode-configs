{
    // https://code.visualstudio.com/docs/editor/tasks
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "rm *.o",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [ "Build" ]
        },
        {
            "label": "Build",
            "detail": "Builds the project.",
            "type": "shell",
            "command": "gcc -fdiagnostics-color=always *.c *.o -g -std=c99 -o main -no-pie",
            "problemMatcher": "$gcc",
            "group": "build",
            "dependsOn": [ "Build Assembly" ]
        },
        {
            "label": "Build Assembly",
            "detail": "Builds *.asm files.",
            "type": "shell",
            "command": "for f in $(find *.asm); do nasm -f elf64 -g -F dwarf $f; done",
            "problemMatcher": "$gcc",
            "group": "build"
        }
    ]
}